<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}} - Lean Workspace</title>
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-brand">Lean Workspace</a>
        <span class="sidebar-subtitle">Documentation</span>
      </div>
      <nav class="sidebar-nav">
        {{#each sidebar}}
        <div class="sidebar-category">
          <button class="sidebar-toggle" data-target="cat-{{slug}}">
            <span class="toggle-icon">{{#if expanded}}&#9660;{{else}}&#9654;{{/if}}</span>
            {{name}}
          </button>
          <div id="cat-{{slug}}" class="sidebar-children{{#unless expanded}} collapsed{{/unless}}">
            {{#each projects}}
            <div class="sidebar-project">
              {{#if hasDoc}}
              <button class="sidebar-toggle sidebar-toggle-project" data-target="proj-{{slug}}">
                <span class="toggle-icon">{{#if expanded}}&#9660;{{else}}&#9654;{{/if}}</span>
                <a href="/project/{{slug}}" class="sidebar-project-link{{#if active}} sidebar-active{{/if}}">{{name}}</a>
              </button>
              <div id="proj-{{slug}}" class="sidebar-children{{#unless expanded}} collapsed{{/unless}}">
                {{#each sections}}
                <a href="/project/{{../slug}}/{{anchor}}" class="sidebar-doc-link{{#if active}} sidebar-section-active{{/if}}">{{title}}</a>
                {{/each}}
              </div>
              {{else}}
              <a href="/project/{{slug}}" class="sidebar-link{{#if active}} sidebar-active{{/if}}">{{name}}</a>
              {{/if}}
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}
      </nav>
      <div class="sidebar-footer">
        <span class="sidebar-footer-text">66 Projects</span>
      </div>
    </aside>

    <!-- Main content -->
    <main class="main-content">
      {{{content}}}
    </main>
  </div>
  <script src="/js/sidebar.js"></script>
</body>
</html>
