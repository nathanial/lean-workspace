<h3>Example: Theme Colors</h3>

<pre><code class="language-lean">-- Define a simple theme
structure Theme where
  background : Color
  foreground : Color
  primary : Color
  secondary : Color
  error : Color
  success : Color

def darkTheme : Theme := {
  background := Color.gray 0.1
  foreground := Color.white
  primary := Color.blue
  secondary := Color.cyan
  error := Color.red
  success := Color.green
}

def lightTheme : Theme := {
  background := Color.white
  foreground := Color.gray 0.1
  primary := Color.blue
  secondary := Color.purple
  error := Color.red
  success := Color.green
}</code></pre>

