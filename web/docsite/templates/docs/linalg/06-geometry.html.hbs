<p>Linalg provides geometric primitives for collision detection, ray casting, and spatial queries.</p>

<h3>3D Primitives</h3>

<pre><code class="language-lean">-- Ray (origin + normalized direction)
let ray := Ray.mk' (Vec3.mk 0.0 0.0 (-10.0)) Vec3.unitZ
let pointOnRay := ray.pointAt 5.0  -- 5 units along ray

-- Axis-Aligned Bounding Box (AABB)
let box := AABB.fromMinMax Vec3.zero (Vec3.mk 10.0 10.0 10.0)
let box := AABB.fromCenterExtents Vec3.zero (Vec3.mk 5.0 5.0 5.0)
let center := box.center
let size := box.extents

-- Sphere
let sphere := Sphere.mk' (center := Vec3.zero) (radius := 5.0)
let contains := sphere.containsPoint somePoint

-- Plane (normal + distance from origin)
let ground := Plane.xz  -- Y = 0 plane
let wall := Plane.mk Vec3.forward 10.0  -- Z = 10 plane
let dist := ground.signedDistance somePoint

-- Triangle
let triangle := Triangle.mk
  (Vec3.mk 0.0 0.0 0.0)
  (Vec3.mk 5.0 0.0 0.0)
  (Vec3.mk 2.5 5.0 0.0)

-- Oriented Bounding Box (OBB)
let obb := OBB.create center orientation halfExtents

-- Capsule (line segment with radius)
let capsule := Capsule.mk startPoint endPoint radius

-- Frustum (6 planes for view frustum culling)
let frustum := Frustum.fromViewProjection vpMatrix</code></pre>

<h3>2D Primitives</h3>

<pre><code class="language-lean">-- Circle
let circle := Circle.mk Vec2.zero 50.0

-- Rectangle (axis-aligned)
let rect := AABB2D.fromCenterExtents Vec2.zero (Vec2.mk 100.0 50.0)

-- Polygon
let polygon := Polygon2D.fromVertices #[
  Vec2.mk 0.0 0.0,
  Vec2.mk 100.0 0.0,
  Vec2.mk 100.0 100.0,
  Vec2.mk 0.0 100.0
]

-- Regular polygon
let hexagon := Polygon2D.regularPolygon Vec2.zero 50.0 6</code></pre>

