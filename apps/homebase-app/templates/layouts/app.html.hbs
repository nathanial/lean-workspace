<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}} - Homebase</title>
  <link rel="stylesheet" href="/css/app.css">
  <link rel="stylesheet" href="/css/chat.css">
  <link rel="stylesheet" href="/css/kanban.css">
  <link rel="stylesheet" href="/css/time.css">
  <link rel="stylesheet" href="/css/gallery.css">
  <link rel="stylesheet" href="/css/notebook.css">
  <link rel="stylesheet" href="/css/health.css">
  <link rel="stylesheet" href="/css/recipes.css">
  <link rel="stylesheet" href="/css/news.css">
  <link rel="stylesheet" href="/css/novels.css">
  <script src="https://unpkg.com/htmx.org@2.0.4"></script>
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>
  <script src="/js/confirm-modal.js"></script>
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <span class="sidebar-header-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
        </span>
        <span class="sidebar-brand">Homebase</span>
      </div>
      <nav class="sidebar-nav">
        <a href="/chat" class="sidebar-link{{#if isChat}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
          </span>
          <span>Chat</span>
        </a>
        <a href="/notebook" class="sidebar-link{{#if isNotebook}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
            </svg>
          </span>
          <span>Notebook</span>
        </a>
        <a href="/time" class="sidebar-link{{#if isTime}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
          </span>
          <span>Time</span>
        </a>
        <a href="/health" class="sidebar-link{{#if isHealth}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </span>
          <span>Health</span>
        </a>
        <a href="/recipes" class="sidebar-link{{#if isRecipes}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/>
              <path d="M7 2v20"/>
              <path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3zm0 0v7"/>
            </svg>
          </span>
          <span>Recipes</span>
        </a>
        <a href="/kanban" class="sidebar-link{{#if isKanban}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <line x1="9" y1="3" x2="9" y2="21"/>
              <line x1="15" y1="3" x2="15" y2="21"/>
            </svg>
          </span>
          <span>Kanban</span>
        </a>
        <a href="/gallery" class="sidebar-link{{#if isGallery}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <circle cx="8.5" cy="8.5" r="1.5"/>
              <polyline points="21 15 16 10 5 21"/>
            </svg>
          </span>
          <span>Gallery</span>
        </a>
        <a href="/news" class="sidebar-link{{#if isNews}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"/>
              <path d="M18 14h-8"/>
              <path d="M15 18h-5"/>
              <path d="M10 6h8v4h-8z"/>
            </svg>
          </span>
          <span>News</span>
        </a>
        <a href="/novels" class="sidebar-link{{#if isNovels}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
              <path d="M3 9h18"/>
              <path d="M9 21V9"/>
            </svg>
          </span>
          <span>Novels</span>
        </a>
        {{#if showAdmin}}
        <div class="sidebar-divider"></div>
        <a href="/admin" class="sidebar-link{{#if isAdmin}} active{{/if}}">
          <span class="sidebar-link-icon">
            <svg viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="3"/>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
            </svg>
          </span>
          <span>Admin</span>
        </a>
        {{/if}}
      </nav>
    </aside>

    <!-- Main area -->
    <div class="main-area">
      <!-- Navbar -->
      <nav class="navbar">
        {{#if userName}}
        <div class="navbar-user">
          <span class="navbar-username">Hello, {{userName}}</span>
          <a href="/logout" class="navbar-link">Logout</a>
        </div>
        {{else}}
        <div class="navbar-user">
          <a href="/login" class="navbar-link">Login</a>
          <a href="/register" class="navbar-link navbar-link-primary">Register</a>
        </div>
        {{/if}}
      </nav>

      <!-- Main content -->
      <div class="main-content">
        {{#if flash.success}}
        <div class="flash flash-success">{{flash.success}}</div>
        {{/if}}
        {{#if flash.error}}
        <div class="flash flash-error">{{flash.error}}</div>
        {{/if}}
        {{#if flash.info}}
        <div class="flash flash-info">{{flash.info}}</div>
        {{/if}}

        {{{content}}}
      </div>
    </div>
  </div>
  <script src="/js/hot-reload.js"></script>
</body>
</html>
