<div class="time-modal-overlay" onclick="if(event.target === this) this.parentElement.innerHTML = ''">
  <div class="time-modal">
    <div class="time-modal-header">
      <h3>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
        </svg>
        Edit Time Entry
      </h3>
      <button type="button" class="time-modal-close" onclick="document.getElementById('modal-container').innerHTML = ''">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    <form hx-put="/time/entry/{{id}}" hx-swap="none"
          hx-on::after-request="document.getElementById('modal-container').innerHTML = ''">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <div class="time-modal-body">
        <div class="time-form-group">
          <label for="description" class="time-form-label">Description</label>
          <input type="text" name="description" id="description" value="{{description}}"
                 class="time-form-input" required>
        </div>
        <div class="time-form-group">
          <label for="category" class="time-form-label">Category</label>
          <select name="category" id="category" class="time-form-select">
            {{#each categories}}
            <option value="{{name}}"{{#if isSelected}} selected{{/if}}>{{name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="time-modal-footer">
        <button type="button" class="time-modal-btn time-modal-btn-secondary"
                onclick="document.getElementById('modal-container').innerHTML = ''">Cancel</button>
        <button type="submit" class="time-modal-btn time-modal-btn-primary">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
            <polyline points="17 21 17 13 7 13 7 21"/>
            <polyline points="7 3 7 8 15 8"/>
          </svg>
          Save Changes
        </button>
      </div>
    </form>
  </div>
</div>
