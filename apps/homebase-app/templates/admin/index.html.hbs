<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-slate-800">User Management</h1>
  <a href="/admin/user/new" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
    + Add User
  </a>
</div>

<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <table class="w-full">
    <thead class="bg-slate-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Admin</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-200">
      {{#each users}}
      <tr class="hover:bg-slate-50">
        <td class="px-6 py-4 text-sm text-slate-900">{{id}}</td>
        <td class="px-6 py-4 text-sm text-slate-900">{{name}}</td>
        <td class="px-6 py-4 text-sm text-slate-500">{{email}}</td>
        <td class="px-6 py-4">
          {{#if isAdmin}}
          <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">Yes</span>
          {{else}}
          <span class="px-2 py-1 text-xs font-medium bg-slate-100 text-slate-600 rounded">No</span>
          {{/if}}
        </td>
        <td class="px-6 py-4 space-x-2">
          <a href="/admin/user/{{id}}" class="text-sm text-slate-600 hover:text-slate-900">View</a>
          <a href="/admin/user/{{id}}/edit" class="text-sm text-blue-600 hover:text-blue-900">Edit</a>
          <button class="text-sm text-red-600 hover:text-red-900"
                  hx-delete="/admin/user/{{id}}"
                  hx-confirm="Are you sure you want to delete this user?"
                  hx-target="body">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
