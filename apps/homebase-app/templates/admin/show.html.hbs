<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-slate-800">User: {{user.name}}</h1>
  <div class="space-x-2">
    <a href="/admin/user/{{user.id}}/edit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
      Edit
    </a>
  </div>
</div>

<div class="bg-white rounded-xl shadow-sm p-6">
  <dl class="grid grid-cols-2 gap-4">
    <dt class="text-sm font-medium text-slate-500">ID</dt>
    <dd class="text-sm text-slate-900">{{user.id}}</dd>

    <dt class="text-sm font-medium text-slate-500">Name</dt>
    <dd class="text-sm text-slate-900">{{user.name}}</dd>

    <dt class="text-sm font-medium text-slate-500">Email</dt>
    <dd class="text-sm text-slate-900">{{user.email}}</dd>

    <dt class="text-sm font-medium text-slate-500">Admin</dt>
    <dd>
      {{#if user.isAdmin}}
      <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">Yes</span>
      {{else}}
      <span class="px-2 py-1 text-xs font-medium bg-slate-100 text-slate-600 rounded">No</span>
      {{/if}}
    </dd>
  </dl>
</div>
