<div class="health-modal-overlay" onclick="if(event.target === this) this.parentElement.innerHTML = ''">
  <div class="health-modal">
    <div class="health-modal-header">
      <h3>Edit Health Entry</h3>
      <button type="button" class="health-modal-close" onclick="document.getElementById('modal-container').innerHTML = ''">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    <form hx-put="/health/entry/{{id}}" hx-swap="none"
          hx-on::after-request="document.getElementById('modal-container').innerHTML = ''">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <div class="health-modal-body">
        <div class="health-form-group">
          <label for="entryType" class="health-form-label">Type</label>
          <select name="entryType" id="entryType" class="health-form-select">
            <option value="weight"{{#if isWeight}} selected{{/if}}>Weight</option>
            <option value="exercise"{{#if isExercise}} selected{{/if}}>Exercise</option>
            <option value="medication"{{#if isMedication}} selected{{/if}}>Medication</option>
            <option value="note"{{#if isNote}} selected{{/if}}>Note</option>
          </select>
        </div>
        <div class="health-form-group">
          <label for="value" class="health-form-label">Value</label>
          <input type="text" name="value" id="value"
                 value="{{value}}" class="health-form-input">
        </div>
        <div class="health-form-group">
          <label for="unit" class="health-form-label">Unit</label>
          <input type="text" name="unit" id="unit"
                 value="{{unit}}" class="health-form-input">
        </div>
        <div class="health-form-group">
          <label for="notes" class="health-form-label">Notes</label>
          <textarea name="notes" id="notes" class="health-form-textarea" rows="3">{{notes}}</textarea>
        </div>
      </div>
      <div class="health-modal-footer">
        <button type="button" class="health-modal-btn health-modal-btn-secondary"
                onclick="document.getElementById('modal-container').innerHTML = ''">Cancel</button>
        <button type="submit" class="health-modal-btn health-modal-btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
            <polyline points="17 21 17 13 7 13 7 21"/>
            <polyline points="7 3 7 8 15 8"/>
          </svg>
          Save Changes
        </button>
      </div>
    </form>
  </div>
</div>
