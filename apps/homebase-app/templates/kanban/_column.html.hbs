<div id="column-{{id}}" class="kanban-column">
  <div class="kanban-column-header">
    <h3 class="kanban-column-title">{{name}}</h3>
    <div class="kanban-column-actions">
      <button hx-get="/kanban/column/{{id}}/add-card-form"
              hx-target="#modal-container" hx-swap="innerHTML"
              class="btn-icon" title="Add card">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <line x1="12" y1="5" x2="12" y2="19"/>
          <line x1="5" y1="12" x2="19" y2="12"/>
        </svg>
      </button>
      <button hx-get="/kanban/column/{{id}}/edit"
              hx-target="#modal-container" hx-swap="innerHTML"
              class="btn-icon" title="Edit column">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
        </svg>
      </button>
      <button hx-delete="/kanban/column/{{id}}"
              hx-swap="none" hx-confirm="Delete column '{{name}}' and all its cards?"
              class="btn-icon btn-icon-danger" title="Delete column">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
  </div>
  <div id="column-cards-{{id}}" data-column-id="{{id}}" class="kanban-column-cards sortable-cards">
    {{#each cards}}
    {{> kanban/_card}}
    {{/each}}
  </div>
</div>
