<div class="novels-container">
  <div class="novels-header">
    <h1>Graphic Novels</h1>
    <a href="/novels/new" class="btn btn-primary">+ New Novel</a>
  </div>

  {{#if hasNovels}}
  <div class="novels-grid">
    {{#each novels}}
    <a href="/novels/{{id}}" class="novel-card">
      {{#if hasCover}}
      <img src="{{coverUrl}}" class="novel-cover" alt="{{title}}">
      {{else}}
      <div class="novel-cover novel-cover-placeholder">
        <svg class="placeholder-icon-svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
          <line x1="8" y1="6" x2="16" y2="6"/>
          <line x1="8" y1="10" x2="14" y2="10"/>
        </svg>
      </div>
      {{/if}}
      <div class="novel-info">
        <h3>{{title}}</h3>
        <p class="novel-meta">{{pageCount}} page{{#unless (eq pageCount 1)}}s{{/unless}}</p>
      </div>
    </a>
    {{/each}}
  </div>
  {{else}}
  <div class="novels-empty">
    <svg class="empty-icon-svg" width="96" height="96" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
      <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
      <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
      <path d="M12 6v6M9 9h6"/>
    </svg>
    <p>No graphic novels yet.</p>
    <p class="empty-hint">Create your first novel to get started!</p>
  </div>
  {{/if}}
</div>

<style>
.placeholder-icon-svg,
.empty-icon-svg {
  opacity: 0.25;
  stroke: currentColor;
}
.novels-empty .empty-icon-svg {
  margin-bottom: 1.5rem;
  opacity: 0.15;
}
</style>

<script src="/js/novels.js"></script>
