<div class="novels-container">
  <div class="novels-header">
    <h1>Edit Novel</h1>
  </div>

  <form method="POST" action="/novels/{{id}}" class="novel-form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="{{title}}" required class="form-input">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="3" class="form-input">{{description}}</textarea>
    </div>
    <div class="form-actions">
      <a href="/novels/{{id}}" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>
</div>
