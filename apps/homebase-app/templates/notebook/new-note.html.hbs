<div class="nb-modal-overlay" onclick="if(event.target === this) this.parentElement.innerHTML = ''">
  <div class="nb-modal nb-modal-lg">
    <div class="nb-modal-header">
      <h3>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14 2 14 8 20 8"/>
          <line x1="12" y1="18" x2="12" y2="12"/>
          <line x1="9" y1="15" x2="15" y2="15"/>
        </svg>
        New Note
      </h3>
      <button type="button" class="nb-modal-close" onclick="document.getElementById('modal-container').innerHTML = ''">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    <form hx-post="/notebook/{{notebookId}}/note/create" hx-swap="none"
          hx-on::after-request="document.getElementById('modal-container').innerHTML = ''">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <div class="nb-modal-body">
        <div class="nb-form-group">
          <label for="title" class="nb-form-label">Title</label>
          <input type="text" name="title" id="title" class="nb-form-input" required autofocus
                 placeholder="Note title">
        </div>
        <div class="nb-form-group">
          <label for="content" class="nb-form-label">Content</label>
          <textarea name="content" id="content" class="nb-form-textarea" rows="8"
                    placeholder="Write your note..."></textarea>
        </div>
      </div>
      <div class="nb-modal-footer">
        <button type="button" class="nb-modal-btn nb-modal-btn-secondary"
                onclick="document.getElementById('modal-container').innerHTML = ''">Cancel</button>
        <button type="submit" class="nb-modal-btn nb-modal-btn-primary">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"/>
            <line x1="5" y1="12" x2="19" y2="12"/>
          </svg>
          Create
        </button>
      </div>
    </form>
  </div>
</div>
